<div class="container-fluid">
    <div class="row">

        <!-- Título -->
        <div class="title-group mb-3" data-aos="fade-down">
            <h1 class="h2 mb-0">Pagina Principal</h1>
            <small class="text-muted">Bienvenido! <span><%= usuario.nombre %></span></small>
        </div>

        <div class="row my-4">
            <!-- Columna izquierda -->
            <div class="col-lg-7 col-12" data-aos="fade-right">

                <!-- Pedidos del Día -->
                <div class="custom-block bg-white" data-aos="zoom-in">
                    <h5 class="mb-4">Pedidos del Día</h5>

                    <% if (pedidosDelDia.length > 0) { %>
                        <% pedidosDelDia.forEach(pedido => { %>
                            <div class="d-flex justify-content-between border-bottom py-2" data-aos="fade-up" data-aos-delay="100">
                                <div>
                                    <strong><%= pedido.Distribuidor?.empresa || 'Distribuidor desconocido' %></strong>
                                    <p class="mb-0"><small>Pedido ID: <%= pedido.idpedido %></small></p>
                                </div>
                                <div class="text-end">
                                    <span><%= pedido.precioTotal.toLocaleString('es-CR', { style: 'currency', currency: 'CRC' }) %></span>
                                    <br>
                                    <small><%= pedido.estadoDeEntrega %></small>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-muted" data-aos="fade-in">Aun no hay pedidos solicitados para hoy!</p>
                    <% } %>
                </div>

                <!-- Distribuidores -->
                <div class="custom-block custom-block-transations mt-4" data-aos="fade-up">
                    <h5 class="mb-4">Distribuidores</h5>

                    <% distribuidores.forEach(distribuidor => { %>
                        <div class="d-flex flex-wrap align-items-center mb-4" data-aos="fade-up" data-aos-delay="100">
                            <div>
                                <p><strong><%= distribuidor.empresa %></strong></p>
                            </div>
                            <div class="ms-auto text-end">
                                <small>Pedidos Pendientes</small>
                                <strong class="d-block text-danger">
                                    <%= pedidosPendientesMap[distribuidor.id] || 0 %>
                                </strong>
                            </div>
                        </div>
                    <% }) %>

                    <div class="border-top pt-4 mt-4 text-center" data-aos="fade-up" data-aos-delay="200">
                        <a class="btn custom-btn" href="/distribuidor">
                            Ver Distribuidores
                            <i class="bi-arrow-up-right-circle-fill ms-2"></i>
                        </a>
                    </div>
                </div>

            </div>

            <!-- Columna derecha -->
            <div class="col-lg-5 col-12" data-aos="fade-left">
                <div class="custom-block custom-block-profile-front custom-block-profile text-center bg-white" data-aos="zoom-in">
                    <div class="custom-block-profile-image-wrap mb-4">
                        <img src="<%= usuario.imagen_url || 'images/medium-shot-happy-man-smiling.jpg' %>" class="custom-block-profile-image img-fluid" alt="Imagen de perfil">
                    </div>

                    <p class="d-flex flex-wrap mb-2">
                        <strong>Nombre:</strong>
                        <span><%= usuario.nombre %></span>
                    </p>

                    <p class="d-flex flex-wrap mb-2">
                        <strong>Correo:</strong>
                        <a href="#"><%= usuario.correo %></a>
                    </p>

                    <p class="d-flex flex-wrap mb-0">
                        <strong>Rol:</strong>
                        <a href="#"><%= rol_name %></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
