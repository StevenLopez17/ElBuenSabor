<div class="container-fluid">
   
        <div class="title-group mb-3">
            <h1 class="h2 mb-0">Vacaciones</h1>
        </div>

        <div class="row my-4">
            <div class="col-lg-12 col-12">
                <div class="custom-block bg-white">

                    <div class="row my-4">
                        <div class="col-lg-12 col-12">
                            <div class="custom-block bg-white ">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-5"> Solicitudes Pendientes </h5>
                                </div>

                                <div class="table-responsive">
                                    <% if (mensaje) { %>
                                        <div class="alert alert-warning">
                                            <%= mensaje %>
                                        </div>
                                        <% } %>
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Solicitante</th>
                                                        <th>Fecha Inicio</th>
                                                        <th>Fecha Finalizacion</th>
                                                        <th>Fecha Solicitud</th>
                                                        <th>Estado</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (vacaciones.length> 0) { %>
                                                        <% vacaciones.forEach(item=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= item.usuario.nombre %>
                                                                </td>
                                                                <td>
                                                                    <%= item.fecha_inicio %>
                                                                </td>
                                                                <td>
                                                                    <%= item.fecha_fin %>
                                                                </td>
                                                                <td>
                                                                    <%= item.fecha_solicitud %>
                                                                </td>
                                                                <td>
                                                                    <%= item.estado %>
                                                                </td>
                                                                <td>
                                                                    <div class="d-flex justify-content-between">
                                                                        <form class="mx-1"
                                                                            action="aprobarSolicitud/<%= item.id %>"
                                                                            method="POST">
                                                                            <button class="btn btn-success"
                                                                                type="submit">
                                                                                Aprobar
                                                                            </button>
                                                                        </form>
                                                                        <form class="mx-1"
                                                                            action="denegarSolicitud/<%= item.id %>"
                                                                            method="POST">
                                                                            <button class="btn btn-danger"
                                                                                type="submit">
                                                                                Denegar
                                                                            </button>
                                                                        </form>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="4" class="text-center">No hay
                                                                            solicitudes registradas.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">Prev</span>
                                </a>
                            </li>

                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="#">1</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">4</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="card-footer text-center mt-3">
                        <small class="text-muted">Regresar <a href="profile">Mi perfil</a></small>
                    </div>
                </div>

            </div>




</div>