<div class="container-fluid">
    <div class="title-group mb-3 d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">Productos</h1>
        <a href="/producto" class="btn btn-light">Regresar</a>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white p-4">
                <h6 class="mb-4">Agregar Producto</h6>
                <form class="custom-form add-producto-form" action="/producto/agregar" method="POST" role="form">
                    <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                    <input class="form-control mb-3" type="number" step="0.01" name="precio" id="precio" placeholder="Precio" required>
                    <input class="form-control mb-3" type="number" name="stock" id="stock" placeholder="Stock" required>
                
                    <label for="formulaciones_id">Seleccionar Fórmula:</label>
                    <select class="form-control mb-3" name="formulaciones_id" id="formulaciones_id" required>
                        <option value="">Seleccione una Fórmula</option>
                        <% formulaciones.forEach(formulacion => { %>
                            <option value="<%= formulacion.id %>"><%= formulacion.nombre %></option>
                        <% }) %>
                    </select>
                
                    <div class="mt-3">
                        <button type="submit" class="btn" style="background-color: #96C700; color: white;">Guardar</button>
                        <a href="/producto" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright © Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>
            </div>
        </div>
    </footer>
</div>



