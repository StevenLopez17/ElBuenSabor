<div class="container-fluid">
    <div class="row my-4">
      <div class="col-lg-12 col-12">
        <div class="custom-block bg-white">
  
          <div class="row my-4">
            <div class="col-lg-12 col-12">
              <div class="custom-block bg-white">
                <h5 class="mb-5" data-aos="fade-right">Lista de Productos</h5>
  
                <!-- Bot贸n a la derecha con animaci贸n -->
                <div class="d-flex justify-content-between align-items-center mb-3" data-aos="fade-up" data-aos-delay="100">
                  <div></div>
                  <a href="/producto/agregar" class="page-link">
                    + Agregar Producto
                  </a>
                </div>
  
                <!-- Tabla con animaci贸n -->
                <div class="table-responsive" data-aos="fade-up" data-aos-delay="200">
                  <% if (mensaje) { %>
                    <div class="alert alert-warning">
                      <%= mensaje %>
                    </div>
                  <% } %>
                  <table id="tablaProductos" class="table table-striped">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (productos.length > 0) { %>
                        <% productos.forEach((producto, index) => { %>
                          <tr data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <td><%= producto.nombre %></td>
                            <td><%= producto.precio %></td>
                            <td><%= producto.stock %></td>
                            <td>
                              <a href="/producto/editar/<%= producto.id %>" class="bi bi-pencil-square custom-block-edit-icon"></a>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center">No hay productos registrados.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
  
              </div>
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </div>
  

<!-- JAVASCRIPT FILES -->
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/apexcharts.min.js"></script>
<script src="/js/custom.js"></script>

<script>
    $(document).ready(function () {
      $('#tablaProductos').DataTable({
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        },
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[0, 'asc']],
        columnDefs: [
          { orderable: false, targets: -1 } // Desactiva ordenaci贸n en columna "Acciones"
        ]
      });
    });
  </script>