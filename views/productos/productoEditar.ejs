<div class="container-fluid">
    <div class="title-group mb-3 d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">Productos</h1>
        <a href="/producto" class="btn btn-light">Regresar</a>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white p-4">
                <h6 class="mb-4">Editar Producto</h6>

                <form class="custom-form edit-producto-form" action="/producto/<%= producto.id %>" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <input class="form-control mb-3" type="text" name="nombre" id="nombre"
                        value="<%= producto.nombre %>" placeholder="Nombre" required>
                    <input class="form-control mb-3" type="number" step="0.01" name="precio" id="precio"
                        value="<%= producto.precio %>" placeholder="Precio" required>
                    <input class="form-control mb-3" type="number" name="stock" id="stock"
                        value="<%= producto.stock %>" placeholder="Stock" required>

                    <div class="mt-3">
                        <button type="submit" class="btn" style="background-color: #96C700; color: white;">Guardar Cambios</button>
                        <a href="/producto" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


