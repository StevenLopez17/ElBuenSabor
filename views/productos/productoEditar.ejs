
    <div class="title-group mb-3">
        <h1 class="h2 mb-0">Productos</h1>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white">
                <ul class="nav nav-tabs" id="productoTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="edit-producto-tab" data-bs-toggle="tab"
                            data-bs-target="#edit-producto-tab-pane" type="button" role="tab"
                            aria-controls="edit-producto-tab-pane" aria-selected="true">Editar Producto</button>
                    </li>
                </ul>

                <div class="tab-content" id="productoTabContent">
                    <!-- Editar Producto -->
                    <div class="tab-pane fade show active" id="edit-producto-tab-pane" role="tabpanel"
                        aria-labelledby="edit-producto-tab">
                        <h6 class="mb-4">Editar Producto</h6>

                        <form class="custom-form edit-producto-form" action="/producto/<%= producto.id %>" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <input class="form-control mb-3" type="text" name="nombre" id="nombre"
                                value="<%= producto.nombre %>" placeholder="Nombre" required>
                            <input class="form-control mb-3" type="number" step="0.01" name="precio" id="precio"
                                value="<%= producto.precio %>" placeholder="Precio" required>
                            <input class="form-control mb-3" type="number" name="stock" id="stock"
                                value="<%= producto.stock %>" placeholder="Stock" required>

                            <div class="d-flex">
                                <button type="submit" class="form-control ms-2">Guardar</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
