<main class="main-wrapper col-md-9 ms-sm-auto py-4 col-lg-9 px-md-4 border-start">

    <div class="row my-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Pedidos</h1>
                <a href="/pedido/agregar" class="btn btn-primary">Agregar Pedido</a>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% pedidos.forEach(pedido => { %>
                <div class="col">
                    <div class="custom-block custom-block-profile-front custom-block-profile text-center bg-white">
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Fecha:</strong>
                            <span><%= pedido.fecha %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Distribuidor ID:</strong>
                            <span><%= pedido.distribuidorId %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Precio Total:</strong>
                            <span>$<%= typeof pedido.precioTotal === 'number' ? pedido.precioTotal.toFixed(2) : '0.00' %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Estado de Pago:</strong>
                            <span><%= pedido.estadoDePago %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Estado de Entrega:</strong>
                            <span><%= pedido.estadoDeEntrega %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Comprobante de Pago:</strong>
                            <span><%= pedido.comprobanteDePago || 'N/A' %></span>
                        </p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

</main>