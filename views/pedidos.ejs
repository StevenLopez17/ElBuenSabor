<main class="main-wrapper col-md-9 ms-sm-auto py-4 col-lg-9 px-md-4 border-start">

    <div class="row my-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Pedidos Pendientes</h1>
                <div class="d-flex justify-content-end mb-3">
                    <a href="/pedido/agregar" class="btn btn-primary me-2">Agregar Pedido</a>
                    <a href="/pedidos/todos" class="btn btn-secondary">Ver Todos los Pedidos</a>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% pedidos.filter(pedido => pedido.estadoDeEntrega === 'no entregado').forEach(pedido => { %>
                <div class="col">
                    <div class="custom-block custom-block-profile-front custom-block-profile text-center bg-white">
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Fecha:</strong>
                            <span><%= pedido.fecha %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Distribuidor ID:</strong>
                            <span><%= pedido.distribuidorId %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Precio Total:</strong>
                            <span>â‚¡<%= typeof pedido.precioTotal === 'number' ? pedido.precioTotal.toFixed(2) : '0.00' %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Estado de Pago:</strong>
                            <span><%= pedido.estadoDePago %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Estado de Entrega:</strong>
                            <span><%= pedido.estadoDeEntrega %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Comprobante de Pago:</strong>
                            <span><%= pedido.comprobanteDePago || 'N/A' %></span>
                        </p>
                        <p class="d-flex flex-wrap mb-2">
                            <strong>Productos:</strong>
                        </p>
                        <ul>
                            <% pedido.productos.forEach(producto => { %>
                            <li><%= producto.nombre %> - Cantidad: <%= producto.cantidad %></li>
                            <% }); %>
                        </ul>
                        <a href="/pedido/editar/<%= pedido.idpedido %>" class="btn btn-warning mt-3">Editar Pedido</a>
                        <a href="/exportarPDFP/<%= pedido.idpedido %>" class="btn btn-danger mt-2">Exportar PDF</a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

</main>
