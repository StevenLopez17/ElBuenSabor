<div class="container-fluid">
  
        <div class="title-group mb-3 d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0">Editar Proveedor</h1>
            <a href="/proveedores" class="btn btn-light">Regresar</a>
        </div>

        <div class="row my-4">
            <div class="col-lg-12 col-12">
                <div class="custom-block bg-white">
                    <form action="/proveedores/editar/<%= proveedor.id %>" method="POST">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= proveedor.nombre %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="contacto" class="form-label">Contacto</label>
                            <input type="text" class="form-control" id="contacto" name="contacto" value="<%= proveedor.contacto %>">
                        </div>
                        <div class="mb-3">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="telefono" name="telefono" value="<%= proveedor.telefono %>">
                        </div>
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo</label>
                            <input type="email" class="form-control" id="correo" name="correo" value="<%= proveedor.correo %>">
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <textarea class="form-control" id="direccion" name="direccion" rows="3"><%= proveedor.direccion %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select" id="estado" name="estado">
                                <option value="true" <%= proveedor.estado ? 'selected' : '' %>>Activo</option>
                                <option value="false" <%= !proveedor.estado ? 'selected' : '' %>>Inactivo</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a href="/proveedores" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>

</div>
