<% if (typeof usuario !== 'undefined' && usuario) { %>
  <div class="modal fade" id="modalImagenPerfil" tabindex="-1" aria-labelledby="modalImagenPerfilLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <form class="modal-content" action="/usuarios/<%= usuario.id %>/imagen" method="POST" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title" id="modalImagenPerfilLabel">Actualizar imagen de perfil</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <input type="file" name="imagenPerfil" accept="image/*" class="form-control" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn">Subir Imagen</button>
        </div>
      </form>
    </div>
  </div>
<% } %>


