<div class="container-fluid">


   
        <div class="title-group mb-3">
            <h1 class="h2 mb-0">Horarios</h1>
        </div>

        <div class="row my-4">
            <div class="col-lg-12 col-12">
                <div class="custom-block bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-5">Lista de Horarios</h5>
                        <ul class="d-flex list-unstyled mb-0">
                            <li class="me-3">
                                <a class="page-link active" href="agregarHorario" aria-label="Next">
                                    + Agregar Horario
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Descripci√≥n</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (horarios.length> 0) {
                                    let contador = 1; %>
                                    <% horarios.forEach(horario=> { %>
                                        <tr>
                                            <td>
                                                <%= contador %>
                                            </td>
                                            <td>
                                                <%= horario.descripcion %>
                                            </td>
                                            <td>
                                                <a href="horarioEliminar/<%= horario.id %>" class="btn btn-danger">
                                                    Eliminar
                                                </a>
                                            </td>
                                        </tr>
                                        <% contador++; }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3" class="text-center">No hay horarios registrados.
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>
</div>



</div>
</div>

<script src="js/jquery.min.js"></script>
