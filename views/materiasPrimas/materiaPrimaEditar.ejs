<div class="container-fluid">
    <div class="title-group mb-3 d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">Materias Primas</h1>
        <a href="/materiaPrima" class="btn btn-light">Regresar</a>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white p-4">
                <h6 class="mb-4">Editar Materia Prima</h6>

                <form class="custom-form edit-materiaPrima-form" action="/materiaPrima/<%= materiaPrima.id %>?_method=PUT"
                    method="POST" role="form">
                    <input class="form-control mb-3" type="text" name="nombre" id="nombre"
                        value="<%= materiaPrima.nombre %>" placeholder="Nombre" required>
                    <input class="form-control mb-3" type="number" step="0.01" name="precio" id="precio"
                        value="<%= materiaPrima.precio %>" placeholder="Precio" required>
                    <input class="form-control mb-3" type="number" name="stock" id="stock"
                        value="<%= materiaPrima.stock %>" placeholder="Stock" required>

                    <div class="mt-3">
                        <button type="submit" class="btn" style="background-color: #96C700; color: white;">Guardar Cambios</button>
                        <a href="/materiaPrima" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright Â© Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>
            </div>
        </div>
    </footer>
</div>

