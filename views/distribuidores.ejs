                            <div class="table-responsive">
                                <% if (mensaje) { %>
                                    <div class="alert alert-warning"><%= mensaje %></div>
                                <% } %>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Direcci√≥n</th>
                                            <th>Telefono</th>
                                            <th>Pedidos Pendientes</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                            <!-- <th>Zona de Cobertura</th> -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (distribuidores.length > 0) { %>
                                            <% distribuidores.forEach(distribuidor => { %>
                                                <tr>
                                                    <td><%= distribuidor.empresa %></td>
                                                    <td><%= distribuidor.direccion %></td>
                                                    <td><%= distribuidor.telefono %></td>
                                                      <!-- <td><%= distribuidor.zona_cobertura %></td> -->
                                                    <td>Pedidos</td>
                                                    <td><%= distribuidor.estado ? 'Activo' : 'Inactivo' %></td>
                                                    <td>
                                                        <a href="distEditar/<%= distribuidor.id %>" class="btn btn-warning">
                                                        Editar
                                                    </a>

                                                    <form action="eliminar/<%= distribuidor.id %>" method="POST" style="display:inline;">
                                                        <button type="submit" class="btn <%= distribuidor.estado ? 'btn-danger' : 'btn-success' %>">
                                                            <%= distribuidor.estado ? 'Desactivar' : 'Activar' %>
                                                        </button>
                                                    </form>
                                                    

                                                </td>
                                                   
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center">No hay distribuidores registrados.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
