<div class="container-fluid">

    <main class="main-wrapper col-md-9 ms-sm-auto py-4 col-lg-9 px-md-4 border-start">
        <div class="title-group mb-3">
            <h1 class="h2 mb-0">Distribuidores</h1>
        </div>

        <div class="row my-4">
            <div class="col-lg-12 col-12">
                <div class="custom-block bg-white">

                    <div class="row my-4">
                        <div class="col-lg-12 col-12">
                            <div class="custom-block bg-white ">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-5"> Lista de Distribuidores</h5>
                                    <ul class="d-flex list-unstyled mb-0">
                                        <li class="me-3">
                                            <a class="page-link active" href="distAgregar" aria-label="Next">
                                                + Agregar Distribuidor
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <form method="GET" action="/filtrarDireccion">
                                    <div class="d-flex justify-content-between align-items-center">
                                    <label for="filtroDireccion">Filtrar por Dirección:</label>
                                    <select name="direccion" id="filtroDireccion" class="form-control mb-3">
                                        <option value="">Todas</option>
                                        <% if (typeof direcciones !== 'undefined' && direcciones.length > 0) { %>
                                            <% direcciones.forEach(d => { %>
                                                <option value="<%= d.direccion %>" <%= filtroDireccion === d.direccion ? 'selected' : '' %>>
                                                    <%= d.direccion %>
                                                </option>
                                            <% }) %>
                                        <% } else { %>
                                            <option value="" disabled>No hay direcciones registradas</option>
                                        <% } %>
                                    </select>
                                    <ul class="d-flex list-unstyled mb-0">
                                    <button type="submit" class="btn btn-primary mb-3">Filtrar</button>
                                    </ul>
                                    </div>
                                </form>
                                
                                
                                
                                <div class="table-responsive">
                                    <% if (mensaje) { %>
                                        <div class="alert alert-warning">
                                            <%= mensaje %>
                                        </div>
                                    <% } %>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Dirección</th>
                                                <th>Telefono</th>
                                                <th>Pedidos Pendientes</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (distribuidores.length > 0) { %>
                                                <% distribuidores.forEach(distribuidor => { %>
                                                    <tr>
                                                        <td><%= distribuidor.empresa %></td>
                                                        <td><%= distribuidor.direccion %></td>
                                                        <td><%= distribuidor.telefono %></td>
                                                        <td>Pedidos</td>
                                                        <td><%= distribuidor.estado ? 'Activo' : 'Inactivo' %></td>
                                                        <td>
                                                            <a href="distEditar/<%= distribuidor.id %>" class="btn btn-warning">Editar</a>
                                                            <form action="eliminar/<%= distribuidor.id %>" method="POST" style="display:inline;">
                                                                <button type="submit" class="btn <%= distribuidor.estado ? 'btn-danger' : 'btn-success' %>">
                                                                    <%= distribuidor.estado ? 'Desactivar' : 'Activar' %>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">No hay distribuidores registrados.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">Prev</span>
                                </a>
                            </li>

                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="#">1</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">4</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </main>

</div>
</div>

