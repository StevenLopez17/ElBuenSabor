<div class="container-fluid">
    <div class="title-group mb-3 d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">Colaboradores</h1>
        <a href="/colaboradores" class="btn btn-light">Regresar</a>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white p-4">
                <h6 class="mb-4">Editar Colaborador</h6>

                <form class="custom-form add-employee-form" action="/colabActualizar/<%= colaborador.id %>"
                    method="POST" role="form">
                    <input class="form-control mb-3" type="number" name="usuario_id" id="usuario_id"
                        value="<%= colaborador.usuario_id %>" placeholder="ID del Usuario" required>
                    <input class="form-control mb-3" type="text" name="cargo" id="cargo"
                        value="<%= colaborador.cargo %>" placeholder="Cargo" required>
                    <input class="form-control mb-3" type="date" name="fecha_ingreso" id="fecha_ingreso"
                        value="<%= formatDate(colaborador.fecha_ingreso) %>" required>
                    <select class="form-control mb-3" name="horario" id="horario" required>
                        <option value="" disabled>Seleccione un horario</option>
                        <% horarios.forEach(horario=> { %>
                            <option value="<%= horario.id %>" <%= colaborador.horario_id == horario.id ? 'selected' : '' %>>
                                <%= horario.descripcion %>
                            </option>
                            <% }); %>
                    </select>

                    <div class="mt-3">
                        <button type="submit" class="btn" style="background-color: #96C700; color: white;">Guardar Cambios</button>
                        <a href="/colaboradores" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright Â© Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>

            </div>
        </div>
    </footer>
</div>
