<div class="container-fluid">
    <div class="title-group mb-3 d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">Colaboradores</h1>
        <a href="/colaboradores" class="btn btn-light">Regresar</a>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white p-4">
                <h6 class="mb-4">Agregar Colaborador</h6>
                <form class="custom-form add-employee-form" action="insertColaborador" method="POST"
                    role="form">
                    <select class="form-control mb-3" name="usuario_id" id="usuario_id" required>
                        <option value="" disabled selected>Seleccione un colaborador</option>
                        <% usuarios.forEach(usuario => { %>
                            <option value="<%= usuario.id %>"><%= usuario.nombre %></option>
                        <% }); %>
                    </select>
                    <input class="form-control mb-3" type="text" name="cargo" id="cargo" placeholder="Cargo"
                        required>
                    <select class="form-control mb-3" name="horario_id" id="horario" required>
                        <option value="" disabled selected>Seleccione un horario</option>
                        <% horarios.forEach(horario => { %>
                            <option value="<%= horario.id %>">
                                <%= horario.descripcion %>
                            </option>
                        <% }); %>
                    </select>
                    <input class="form-control mb-3" type="date" name="fecha_ingreso" id="fecha_ingreso"
                        required>

                    <div class="mt-3">
                        <button type="submit" class="btn" style="background-color: #96C700; color: white;">Guardar</button>
                        <a href="/colaboradores" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright Â© Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>

            </div>
        </div>
    </footer>
</div>
