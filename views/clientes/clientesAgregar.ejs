<main class="main-wrapper col-md-9 ms-sm-auto py-4 col-lg-9 px-md-4 border-start">
    <div class="title-group mb-3">
        <h1 class="h2 mb-0">Clientes</h1>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white">
                <ul class="nav nav-tabs" id="clientTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="add-client-tab" data-bs-toggle="tab"
                            data-bs-target="#add-client-tab-pane" type="button" role="tab"
                            aria-controls="add-client-tab-pane" aria-selected="true">Agregar Cliente</button>
                    </li>
                </ul>

                <div class="tab-content" id="clientTabContent">
                    <!-- Agregar Cliente -->
                    <div class="tab-pane fade show active" id="add-client-tab-pane" role="tabpanel"
                        aria-labelledby="add-client-tab">
                        <h6 class="mb-4">Agregar Cliente</h6>
                        <form class="custom-form add-client-form" action="agregar1" method="POST" role="form">
                            <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                            <input class="form-control mb-3" type="text" name="representante" id="representante" placeholder="Representante" required>
                            <input class="form-control mb-3" type="text" name="numero" id="numero" placeholder="Teléfono" required>
                            <input class="form-control mb-3" type="email" name="correo" id="correo" placeholder="Correo" required>
                            <input class="form-control mb-3" type="text" name="direccion" id="direccion" placeholder="Dirección" required>
                            <label for="distribuidor_id">Seleccionar Distribuidor:</label>
                            <select name="distribuidor_id" id="distribuidor_id" class="form-control mb-3" required>
                                <option value="">Seleccione un distribuidor</option>
                                <% if (distribuidores && distribuidores.length > 0) { %>
                                    <% distribuidores.forEach(distribuidor => { %>
                                        <option value="<%= distribuidor.id %>"><%= distribuidor.empresa %></option>
                                    <% }) %>
                                <% } else { %>
                                    <option value="" disabled>No hay distribuidores disponibles</option>
                                <% } %>
                            </select>
                            <div class="d-flex">
                                <button type="submit" class="form-control ms-2">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright © Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>
            </div>
        </div>
    </footer>
</main>
