 <div class="row my-4">
            <div class="col-lg-12 col-12">
                <div class="custom-block bg-white">
                    <div class="row my-4">
                        <div class="col-lg-12 col-12">
                            <div class="custom-block bg-white ">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-5"> Lista de Clientes</h5>
                                    <ul class="d-flex list-unstyled mb-0">
                                        <li class="me-3">
                                            <a class="page-link" href="clienteAgregar" aria-label="Next">
                                                + Agregar Cliente
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <div class="table-responsive">
                                    <% if (mensaje) { %>
                                        <div class="alert alert-warning">
                                            <%= mensaje %>
                                        </div>
                                    <% } %>
                                    <table id="tablaClientes" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Representante</th>
                                                <th>Distribuidor Asignado</th>
                                                <th>Telefono</th>
                                                <th>Correo</th>
                                                <th>Dirección</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (clientes.length > 0) { %>
                                                <% clientes.forEach(cliente => { %>
                                                    <tr>
                                                        <td><%= cliente.nombre %></td>
                                                        <td><%= cliente.representante %></td>
                                                        <td><%= cliente.Distribuidor ? cliente.Distribuidor.empresa : 'Sin Distribuidor' %></td>
                                                        <td><%= cliente.numero %></td>
                                                        <td><%= cliente.correo %></td>
                                                        <td><%= cliente.direccion %></td>
                                                        <td><%= cliente.estado ? 'Activo' : 'Inactivo' %></td>
                                                        <td>
                                                            <div class="d-flex align-items-center gap-2">
                                                              <a href="clienteEditar/<%= cliente.id %>" class="bi bi-pencil-square custom-block-edit-icon"></a>
                                                          
                                                              <form action="eliminar1/<%= cliente.id %>" method="POST">
                                                                <div class="form-check form-switch m-0">
                                                                  <input 
                                                                    class="form-check-input" 
                                                                    type="checkbox" 
                                                                    name="estado" 
                                                                    onchange="this.form.submit()" 
                                                                    <%= cliente.estado ? 'checked' : '' %>>
                                                                </div>
                                                              </form>
                                                            </div>
                                                          </td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center">No hay clientes registrados.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<!-- JAVASCRIPT FILES -->
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<script src="js/apexcharts.min.js"></script>
<script src="js/custom.js"></script>

<script>
    $(document).ready(function () {
      $('#tablaClientes').DataTable({
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        },
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[0, 'asc']],
        columnDefs: [
          { orderable: false, targets: -1 } // Desactiva ordenación en columna "Acciones"
        ]
      });
    });
  </script>