<main class="main-wrapper col-md-9 ms-sm-auto py-4 col-lg-9 px-md-4 border-start">
    <div class="title-group mb-3">
        <h1 class="h2 mb-0">Materias Primas</h1>
    </div>

    <div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white">
                <ul class="nav nav-tabs" id="materiaPrimaTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="edit-materiaPrima-tab" data-bs-toggle="tab"
                            data-bs-target="#edit-materiaPrima-tab-pane" type="button" role="tab"
                            aria-controls="edit-materiaPrima-tab-pane" aria-selected="true">Editar Materia Prima</button>
                    </li>
                </ul>

                <div class="tab-content" id="materiaPrimaTabContent">
                    <!-- Editar Materia Prima -->
                    <div class="tab-pane fade show active" id="edit-materiaPrima-tab-pane" role="tabpanel"
                        aria-labelledby="edit-materiaPrima-tab">
                        <h6 class="mb-4">Editar Materia Prima</h6>

                        <form class="custom-form edit-materiaPrima-form" action="/materiaPrima/<%= materiaPrima.id %>?_method=PUT"
                            method="POST" role="form">
                            <input class="form-control mb-3" type="text" name="nombre" id="nombre"
                                value="<%= materiaPrima.nombre %>" placeholder="Nombre" required>
                            <input class="form-control mb-3" type="number" step="0.01" name="precio" id="precio"
                                value="<%= materiaPrima.precio %>" placeholder="Precio" required>
                            <input class="form-control mb-3" type="number" name="stock" id="stock"
                                value="<%= materiaPrima.stock %>" placeholder="Stock" required>

                            <div class="d-flex">
                                <button type="submit" class="form-control ms-2">Guardar</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <p class="copyright-text">Copyright Â© Mini Finance 2048
                        - Design: <a rel="sponsored" href="https://www.tooplate.com" target="_blank">Tooplate</a></p>
                </div>
            </div>
        </div>
    </footer>
</main>
