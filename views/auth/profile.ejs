<div class="container-fluid">
  <div class="row">
    <!-- Título -->
    <div class="title-group mb-3" data-aos="fade-down">
      <h1 class="h2 mb-0">Perfil</h1>
    </div>

    <div class="row my-4">
      <!-- Perfil -->
      <div class="col-lg-7 col-12" data-aos="fade-right">
        <div class="custom-block custom-block-profile">
          <div class="row">
            <div class="col-lg-12 col-12 mb-3">
              <h6 data-aos="fade-in">General</h6>
            </div>

            <div class="col-lg-3 col-12 mb-4 mb-lg-0" data-aos="zoom-in">
              <div class="custom-block-profile-image-wrap">
                <img src="<%= usuario.imagen_url || 'images/medium-shot-happy-man-smiling.jpg' %>" class="custom-block-profile-image img-fluid" alt="Imagen de perfil">
                <a href="#" class="bi-pencil-square custom-block-edit-icon" data-bs-toggle="modal" data-bs-target="#modalImagenPerfil"></a>
              </div>
            </div>

            <div class="col-lg-9 col-12" data-aos="fade-left" data-aos-delay="100">
              <p class="d-flex flex-wrap mb-2">
                <strong>Nombre:</strong>
                <span><%= usuario.nombre %></span>
              </p>
              <p class="d-flex flex-wrap mb-2">
                <strong>Correo Electrónico:</strong>
                <span><%= usuario.correo %></span>
              </p>
              <p class="d-flex flex-wrap mb-2">
                <strong>Rol:</strong>
                <span><%= rol_name %></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Panel Administrador -->
      <% if (usuario.rol === 1) { %>
        <div class="col-lg-5 col-12" data-aos="fade-left">
          <div class="custom-block primary-bg p-5" style="min-height: 300px;">
            <h5 class="text-white mb-4 text-center" data-aos="zoom-in">Panel Administrador</h5>

            <div class="d-flex flex-wrap justify-content-between gap-5">
              <div class="profile-rounded text-center" data-aos="fade-up" data-aos-delay="100">
                <a href="registro" class="d-flex flex-column align-items-center">
                  <i class="profile-rounded-icon bi bi-plus-circle fs-1"></i>
                  <small class="text-white mt-2">Crear Usuario</small>
                </a>
              </div>
              <div class="profile-rounded text-center" data-aos="fade-up" data-aos-delay="200">
                <a href="horarios" class="d-flex flex-column align-items-center">
                  <i class="profile-rounded-icon bi bi-calendar-fill fs-1"></i>
                  <small class="text-white mt-3">Horarios</small>
                </a>
              </div>
              <div class="profile-rounded text-center" data-aos="fade-up" data-aos-delay="300">
                <a href="vacacionesSolicitudes" class="d-flex flex-column align-items-center">
                  <i class="profile-rounded-icon bi bi-bookmarks fs-1"></i>
                  <small class="text-white mt-3">Solicitudes Vacaciones</small>
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Panel Colaboradores -->
      <% if (usuario.rol === 2 || usuario.rol === 4) { %>
        <div class="col-lg-5 col-12" data-aos="fade-left">
          <div class="custom-block primary-bg p-5" style="min-height: 300px;">
            <h5 class="text-white mb-4 text-center" data-aos="zoom-in">Panel Colaboradores</h5>

            <div class="d-flex flex-wrap justify-content-between gap-5">
              <div class="profile-rounded text-center" data-aos="fade-up" data-aos-delay="150">
                <a href="vacaciones" class="d-flex flex-column align-items-center">
                  <i class="profile-rounded-icon bi bi-calendar-check fs-1"></i>
                  <small class="text-white mt-3">Solicitar Vacaciones</small>
                </a>
              </div>
              <div class="profile-rounded text-center" data-aos="fade-up" data-aos-delay="250">
                <a href="vacacionesSolicitadasUser" class="d-flex flex-column align-items-center">
                  <i class="profile-rounded-icon bi bi-clock fs-1"></i>
                  <small class="text-white mt-3">Solicitudes Realizadas</small>
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
