<div class="py-3">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Agregar Pedido</h3>
      <div class="d-flex justify-content-end mb-3">
          <a href="/pedido" class="btn btn-secondary">Volver a Pedidos</a>
      </div>
    </div>
    
    <% if (error === 'seleccioneProductos') { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Advertencia:</strong> Seleccione al menos un producto para continuar.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <% if (error && error !== 'seleccioneProductos') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <!-- Removido el mensaje de error porque distribuidorId ahora se asigna automáticamente -->
    
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <strong>Información:</strong> Este pedido se asignará automáticamente a su cuenta de distribuidor.
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <form action="/pedido/agregar" method="POST">
        <div class="mb-3">
            <label for="fecha" class="form-label">Fecha</label>
            <input type="date" class="form-control" id="fecha" name="fecha" required>
        </div>
        <!-- El distribuidorId se asignará automáticamente en el servidor -->
        <input type="hidden" id="distribuidorId" name="distribuidorId" value="">
                 <div class="mb-3">
             <label for="productos" class="form-label">Productos</label>
             <div id="productos">
                 <!-- Debug: <%= productos ? productos.length : 'No hay productos' %> -->
                 <% if (productos && productos.length > 0) { %>
                 <% productos.forEach(producto=> { %>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <input type="checkbox" id="producto-<%= producto.id %>"
                                name="items[<%= producto.id %>][productoId]" value="<%= producto.id %>">
                            <label for="producto-<%= producto.id %>">
                                <%= producto.nombre %> ($<%= (typeof producto.precio==='number' ? 
                                        producto.precio.toFixed(2) : '0.00' ) %>)
                            </label>
                        </div>
                        <div class="col-md-6">
                            <input type="number" class="form-control" name="items[<%= producto.id %>][cantidad]"
                                placeholder="Cantidad" min="1">
                        </div>
                                         </div>
                     <% }); %>
                 <% } else { %>
                     <div class="alert alert-warning">
                         <strong>No hay productos disponibles.</strong> Contacte al administrador para agregar productos.
                     </div>
                 <% } %>
             </div>
         </div>
        <button type="submit" class="btn btn-primary">Agregar Pedido</button>
    </form>
  </div>
</div>
