<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-lg-12 col-12">
      <div class="custom-block bg-white p-4">

        <h1 class="text-center mb-4">Lista de Pagos</h1>

        <% if (mensaje) { %>
          <div class="alert alert-info text-center">
            <%= mensaje %>
          </div>
        <% } %>

        <div class="text-end mb-3">
          <a href="/pagos/agregar" class="btn btn-primary">Agregar Pago</a>
        </div>

        <div class="table-responsive">
          <table id="tablaPagos" class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Proveedor</th>
                <th>Fecha de Pago</th>
                <th>Precio</th>
                <th>Impuesto</th>
                <th>Precio Total</th>
                <th>Referencia</th>
                <th>Notas</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if (pagos.length > 0) { %>
                <% pagos.forEach((pago, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= pago.proveedor.nombre %></td>
                    <td><%= pago.fecha_pago %></td>
                    <td>$<%= pago.precio.toFixed(2) %></td>
                    <td>$<%= pago.impuesto.toFixed(2) %></td>
                    <td>$<%= pago.precio_total.toFixed(2) %></td>
                    <td><%= pago.referencia || 'N/A' %></td>
                    <td><%= pago.notas || 'N/A' %></td>
                    <td>
                      <a href="/pagos/editar/<%= pago.id %>" class="bi bi-pencil-square custom-block-edit-icon"></a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="9" class="text-center">No hay pagos registrados.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<script src="js/apexcharts.min.js"></script>
<script src="js/custom.js"></script>

<script>
  $(document).ready(function () {
    $('#tablaPagos').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
      },
      pageLength: 10,
      lengthMenu: [5, 10, 25, 50],
      order: [[0, 'asc']],
      columnDefs: [
        { orderable: false, targets: -1 } // Desactiva ordenaci√≥n en columna "Acciones"
      ]
    });
  });
</script>