

<div class="container mt-4">
  <h1 class="text-center">Lista de Pagos</h1>

  <% if (mensaje) { %>
    <div class="alert alert-info text-center">
      <%= mensaje %>
    </div>
  <% } %>

  <div class="text-end mb-3">
    <a href="/pagos/agregar" class="btn btn-primary">Agregar Pago</a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Proveedor</th>
        <th>Fecha de Pago</th>
        <th>Precio</th>
        <th>Impuesto</th>
        <th>Precio Total</th>
        <th>Referencia</th>
        <th>Notas</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (pagos.length > 0) { %>
        <% pagos.forEach((pago, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= pago.proveedor.nombre %></td>
            <td><%= pago.fecha_pago %></td>
            <td>$<%= pago.precio.toFixed(2) %></td>
            <td>$<%= pago.impuesto.toFixed(2) %></td>
            <td>$<%= pago.precio_total.toFixed(2) %></td>
            <td><%= pago.referencia || 'N/A' %></td>
            <td><%= pago.notas || 'N/A' %></td>
            <td>
              <a href="/pagos/editar/<%= pago.id %>" class="btn btn-warning btn-sm">Editar</a>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="9" class="text-center">No hay pagos registrados.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

